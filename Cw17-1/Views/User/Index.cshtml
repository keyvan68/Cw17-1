@model IEnumerable<Cw17_1.Models.User>

@{
    ViewData["Title"] = "لیست کاربران";
}

<h1>لیست کاربران</h1>

<p>
    <a class="btn btn-primary" asp-controller="User" asp-action="Create">اضافه کردن  کاربر</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                    <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-Id="@item.Id">حذف کاربر</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
